<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nickinc.findadog.InfoActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/dogBreed"
        android:hint="Enter the dog breed"
        android:textSize="18sp" />

    <Button
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:id="@+id/enterButton"
        android:onClick="backToMap"
        android:layout_below="@+id/dogBreed"
        android:layout_alignEnd="@+id/dogBreed"
        android:layout_marginTop="102dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeText"
        android:hint="Enter the time you saw the dog"
        android:layout_width="300dp"
        android:layout_below="@+id/dogBreed"
        android:layout_alignStart="@+id/dogBreed"
        android:textSize="18sp" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/timeText"
        android:layout_alignStart="@+id/timeText"
        android:id="@+id/nameText"
        android:hint="Enter dog name (if known)" />

</RelativeLayout>
